/**index.wxss**/
ec-canvas {
  width: 100%;
  height: 60%;
  padding: 20rpx;
}
.map {
  background-color: #fff;
}
.loc {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.pad {
  padding: 160rpx 60rpx 20rpx;
}
.head_pic image {
  width: 100%;
  vertical-align: bottom;
}
.desc {
  width: 90%;
  height:300rpx;
  position: absolute;
  top: 320rpx;
  left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
  box-shadow: 0rpx 20rpx 30rpx -20rpx #aaa;
  padding: 20rpx;
  background-color: #fff;
}
.desc_title {
  font-family: NSimSun;
  font-size: 38rpx;
  font-weight: 1000;
  color: #000;
  letter-spacing: 3rpx;
}
.desc_time {
  font-size: 24rpx;
  color: #ccc;
}
.flex {
  display: flex;
}
.desc .flex {
  justify-content: space-evenly;
}
.box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}
.newadd {
  font-size: 22rpx;
  color: #ccc;
}
.box view:nth-of-type(1) {
  font-size: 26rpx;
}
.box view:nth-of-type(2) {
  margin: 16rpx 0;
}
.red {
  color: #D46D21
}
.orange{
  color: #BC371F
}
.green {
  color: #3B8A50
}
.gray {
  color: #666666;
}
.location {
  font-size: 28rpx;
  color: #3B8A50
}
.location image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.city {
  text-decoration: underline;
}
.loc_title {
  font-size: 36rpx;
  font-weight: 500;
}
.loc_desc {
  font-size: 24rpx;
  color: rgb(110, 109, 109);
  padding: 40rpx;
  padding-top: 0;
  box-sizing: border-box;
}
.province {
  font-size: 28rpx;
  flex: 2;
  text-indent: 1em;
}
.proportion view:not(:nth-of-type(1)) {
  flex: 1.5;
}
.bg {
  background-color: rgb(243, 240, 240);
}
.map_title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  flex: 1;
}
.map {
  font-size: 24rpx;
  color: rgb(184, 184, 184);
  padding: 40rpx;
}
.map_desc {
  display: flex;
  flex: 1.2;
  flex-direction: row-reverse;
  align-items: flex-end;
}
.line_title {
  font-size: 34rpx;
  font-weight: 600;
  padding: 40rpx;
  padding-bottom: 0;
}